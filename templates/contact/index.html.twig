{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<h1 class="title margin-b">Contact</h1>

	{# Alert notification #}
	{% include "notification.html.twig" %}

	{# Contenue #}
	<div class="card card-padding">

		<div class="contact-header margin-b">
			<a href="{{ path('contact_new') }}" class="btn btn-secondary btn-radius">
				<i class="fas fa-plus"></i> Ajouter
			</a>
			{{render(controller('App\\Controller\\ContactController::getSearchForm'))}}
		</div>
    
		<table class="table">
			<thead>
				<tr>
					<th>Nom Prénom</th>
					<th>Courriel</th>
					<th>Téléphone</th>
					<th>Adresse</th>
					<th>Ville</th>
					<th>CP</th>
					<th>Commentaires</th>
					<th>Actions</th>
		
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>
							{% if contact.title == "Monsieur" %}
								Mr
							{% else %}
								Mme
							{% endif %}
							{{ contact.lastname }} {{ contact.firstname }}
						</td>
						<td>{{ contact.mail }}</td>
						<td>{{ contact.phone }}</td>
						<td>{{ contact.adress ? contact.adress.adressLine1 : ""}}</td>
						<td>{{ contact.adress ? contact.adress.city : ""}}</td>
						<td>{{ contact.adress ? contact.adress.zipCode : ""}}</td>
						<td>{{ contact.comment|length > 25 ? contact.comment|slice(0, 25)~'...' : contact.comment }}</td>
				

						<td class="actions">
							<a href="{{ path('contact_show', {'id': contact.id}) }}"><i class="far fa-eye"></i></a>
							<a href="{{ path('contact_edit', {'id': contact.id}) }}"><i class="far fa-edit"></i></a>
							{{ include('contact/_delete_form.html.twig') }}
						</td>
					</tr>						
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# display navigation #}
		<div class="margin-tb">
			{{ knp_pagination_render(contacts) }}
		</div>

	</div>
{% endblock %}
