{% extends 'base.html.twig' %}

{% block title %}Computer{% endblock %}

{% block body %}
    <h1>Computer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ computer.id }}</td>
            </tr>
            <tr>
                <th>ReceivedAt</th>
                <td>{{ computer.receivedAt ? computer.receivedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ computer.serial }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ computer.status }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ computer.comment }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ computer.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('computer_index') }}">back to list</a>

    <a href="{{ path('computer_edit', {'id': computer.id}) }}">edit</a>

    {{ include('computer/_delete_form.html.twig') }}
{% endblock %}
