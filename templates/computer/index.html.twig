{% extends 'base.html.twig' %}

{% block title %}Computer index{% endblock %}

{% block body %}
    <h1 class="title margin-b">Ordinateur</h1>

	<!--==== Card ====-->
	<div class="card card-padding">

		<div class="contact-header margin-b">
			<a href="{{ path('computer_new') }}" class="btn btn-secondary btn-radius">
				<i class="fas fa-plus"></i> Ajouter
			</a>
			<form action="">
				<input type="search" id="" placeholder="Search computer..." class="radius">
			</form>
		</div>
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ReceivedAt</th>
                <th>Serial</th>
                <th>Status</th>
                <th>Comment</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for computer in computers %}
            <tr>
                <td>{{ computer.id }}</td>
                <td>{{ computer.receivedAt ? computer.receivedAt|date('Y-m-d') : '' }}</td>
                <td>{{ computer.serial }}</td>
                <td>{{ computer.status }}</td>
                <td>{{ computer.comment }}</td>
                <td>{{ computer.type }}</td>
                	<td class="actions">
                            <a href="{{ path('computer_edit', {'id': computer.id}) }}"><i class="far fa-edit"></i></a>
                            {{ include('computer/_delete_form.html.twig') }}
						</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
