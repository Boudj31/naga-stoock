{% extends 'base.html.twig' %}

{% block title %}MemberShip index{% endblock %}

{% block body %}
	<h1 class="title margin-b">Adhésion</h1>

	{# Alert notification #}
	{% include "notification.html.twig" %}

	{# Contenue #}
	<div class="card card-padding">

		<div class="contact-header margin-b">
			<a href="{{ path('member_ship_new') }}" class="btn btn-secondary btn-radius">
				<i class="fas fa-plus"></i>
				Ajouter
			</a>
			<form action="">
				<input type="search" id="" placeholder="Search computer..." class="radius">
			</form>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Type</th>
					<th>Com</th>
					<th>Mail</th>
					<th>Téléphone</th>
					<th>Ordinateur</th>
					<th>Amount</th>
					<th>Comment</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for member_ship in member_ships %}
					{%  set member = member_ship.member %}
					<tr>
						<td>
							{% if member.title == "Monsieur" %}
								Mr
							{% else %}
								Mme
							{% endif %}
							{{ member.lastname }}
							{{ member.firstname }}
						</td>
						<td>{{ member_ship.type }}</td>
						<td>{{ member_ship.beginAt ? member_ship.beginAt|date('Y-m-d') : '' }}</td>
						<td>{{ member.mail }}</td>
						<td>{{ member.phone }}</td>
						<td>
							{% if member_ship.computer %}
								{{ member_ship.computer.serial }}
							{% else %}
								{{ 'default.noComputer' | trans }}
							{% endif %}
						</td>
						<td>{{ member_ship.amount }}
							€</td>
						<td>{{ member_ship.comment }}</td>
						<td class="actions">
							<a href="{{ path('member_ship_edit', {'id': member_ship.id}) }}">
								<i class="far fa-edit"></i>
							</a>
							{{ include('member_ship/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{# display navigation #}
		<div class="margin-tb">
			{{ knp_pagination_render(member_ships) }}
		</div>

	</div>
{% endblock %}
