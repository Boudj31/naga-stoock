{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

 <style>
         input {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          box-sizing: border-box;
          border: none;
          background-color: #F1F1F1;
          color: white;
          border-radius: 3rem;
          border: 1px solid black;
        }

        label {
            margin: 10px;
        }

        h1{
            margin-top: 5rem;
            font-size: 34px;
            margin-bottom: 2rem;
        }

        button {
            border: 0;
            border-radius: 3px;
            padding: 1rem 2rem;
            font-weight: 700;
            cursor: pointer;
            width: 100%;
            text-align: center;
            background: #2C3E50;
            box-shadow: 0 8px 18px black;
            color: white;

        }
      </style>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Espace connection</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus> <br>
    <label for="inputPassword">Mot de passe</label><br>
    <input type="password" name="password" id="inputPassword" class="form-control" required><br><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Se Connecter
    </button>
</form>
{% endblock %}
